<%- include('../../partials/header.ejs')%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.css">

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <%- include('../../partials/sidebar.ejs') %>
        </div>
        <div class="col-md-10 ">
            <div class="row mt-5">
                <div class="col-md-8 offset-md-2">
                    <h5>My Recntly Posts</h5>
                    <div class="row">

                        <% if(posts.length === 0 ){ %>
                        <div class="text-center text-muted">
                            <p>There is no posts available right now</p>
                        </div>

                        <% }else{ %>
                        <% for(let post of posts) {%>

                        <div class="card col-sm-3 m-2">
                            <% if(post.thumbnail){ %>
                                <img src=" <%= post.thumbnail %> " alt="" style="height: 180px;" class="card-img-top mt-3">
                            <% } %>

                            <div class="card-body p-0">
                                <a href="/explorer/<%= post._id %>">
                                    <p class="my-2 " style="font-size: 20px;"><%= post.title  %> </p>
                                </a>

                            </div>
                        </div>
                        <% } %>
                        <% } %>

                    </div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-8 offset-md-2">
                    <h5>Recntly created Bookmarks</h5>
                    <div class="row">
                        
                        <% if(bookmarks.length === 0 ){ %>
                            <div class="text-center text-muted">
                                <p>There is no bookmarks available right now</p>
                            </div>

                        <% }else{ %>
                        <% for(let bookmark of bookmarks) {%>

                        <div class="card col-sm-3 m-2">
                            <% if(bookmark.thumbnail){ %>
                                <img src=" <%= bookmark.thumbnail %> " alt="" style="height: 180px;" class="card-img-top mt-3">
                            <% } %>

                            <div class="card-body p-0">
                                <a href="/explorer/<%= bookmark._id %>">
                                    <p class="my-2 " style="font-size: 20px;"><%= bookmark.title  %> </p>
                                </a>

                            </div>
                        </div>
                        <% } %>
                        <% } %>

                    </div>
                </div>
            </div>
        </div>
    </div>
