<%- include('../partials/header.ejs')%>

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body">
                <h4 class="mb-5">Create A New Account</h4>
                <form action="/playground/play" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="username">Enter Your Username (Must Be Uniq)</label>
                        <input type="text" name="username" id="username" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="file">Choes Your File</label>
                        <input type="file" name='my-file' id="file" class="form-control">
                    </div>
                    <input type="submit" class="btn btn-primary" value="Signup">
                </form>
                <a href="/auth/login" class="my-3 text-center">Already Have An Account.</a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

